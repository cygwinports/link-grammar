DESCRIPTION="Link Grammar Parser"
HOMEPAGE="http://www.link.cs.cmu.edu/link/"
SRC_URI="http://www.abisource.com/downloads/${PN}/${PV}/${P}.tar.gz"

abi=4
PKG_NAMES="${PN} lib${PN}${abi} lib${PN}-devel"
PKG_HINTS="setup lib devel"
PKG_CONTENTS[0]='usr/bin/*.exe usr/share/doc/'
PKG_CONTENTS[1]="usr/bin/cyg${PN}-${abi}.dll usr/share/${PN}/"
PKG_CONTENTS[2]='usr/include/ usr/lib/'

# library requires dictionary files at runtime
CYGCONF_ARGS="--disable-static"
